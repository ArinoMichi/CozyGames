@model Juego

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card p-4">
                <img src="@Model.ImagenBanner" alt="@Model.Nombre" class="img-fluid rounded mb-4" />

                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#calificacionModal">
                    Calificar
                </button>

                <div class="modal fade" id="calificacionModal" tabindex="-1" aria-labelledby="calificacionModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="calificacionModalLabel">Calificar Juego</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">

                                <form method="post">
                                    <div class="mb-3">
                                        <label for="nota" class="form-label">Nota:</label>
                                        <input type="number" class="form-control" name="nota" id="nota" min="0" max="10" step="0.1" required>
                                        <input type="hidden" class="form-control" name="idjuego" value="@Model.IdJuego">
                                    </div>
                                    <div class="mb-3">
                                        <label for="titulo" class="form-label">Titulo:</label>
                                        <textarea class="form-control" name="titulo" id="titulo" required></textarea>
                                    </div>

                                    <div class="mb-3">
                                        <label for="comentario" class="form-label">Comentario:</label>
                                        <textarea class="form-control" name="comentario" id="comentario" rows="3" required></textarea>
                                    </div>

                                    <button type="submit" class="btn btn-primary">Calificar</button>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
