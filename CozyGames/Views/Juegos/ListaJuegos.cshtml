@model List<Juego>

<div class="container p-5 pb-2" style="background-color:#121123; margin-top:7rem;">
    @if (Model.Count() == 0)
    {
        <h2 style="text-align: start; color:#ffbade">No se encontraron juegos</h2>
    }
    else
    {
        <div class="m-4">
            <div class="row">
                @foreach (Juego juego in Model)
                {
                    <a class="col-4 col-sm-3 text-decoration-none" asp-action="Details" asp-controller="Juegos" asp-route-id="@juego.IdJuego">
                        <img src="@juego.ImagenVertical" class="w-100 h-75 rounded card-img-top" />
                        <div class="card-body">
                            <h5 class="card-title text-light">@juego.Nombre</h5>
                        </div>
                    </a>
                }
            </div>
        </div>
    }
</div>
